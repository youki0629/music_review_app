<h1>レビューを編集</h1>

<% if @review.errors.any? %>
  <div class="mb-4 p-3 border rounded bg-red-50">
    <p class="font-semibold">エラーがあります（<%= @review.errors.count %>件）</p>
    <ul class="list-disc ml-5">
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @review, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, "タイトル", class: "block font-medium" %>
    <%= form.text_field :title, class: "border rounded w-full p-2" %>
  </div>

  <div class="mb-3">
    <%= form.label :artist, "アーティスト", class: "block font-medium" %>
    <%= form.text_field :artist, class: "border rounded w-full p-2" %>
  </div>

  <div class="mb-3">
    <%= form.label :genre, "ジャンル", class: "block font-medium" %>
    <%= form.text_field :genre, class: "border rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, "レビュー内容", class: "block font-medium" %>
    <%= form.text_area :body, rows: 6, class: "border rounded w-full p-2" %>
  </div>

  <%= form.submit "更新", class: "px-4 py-2 rounded bg-indigo-600 text-white" %>
<% end %>

<%= link_to '詳細', @review %> |
<%= link_to '一覧', reviews_path %>
