<div class="col-md-6 col-lg-4 mb-4">
  <div class="card h-100">
    <div class="card-body">
      <h5 class="card-title"><%= review.title %></h5>
      <p class="card-text">
        <strong>アーティスト:</strong> <%= review.artist %><br>
        <strong>ジャンル:</strong> <%= review.genre %>
      </p>
      
      <!-- レビュー本文 -->
      <% if review.body.present? %>
        <p class="card-text">
          <%= truncate(review.body, length: 100) %>
        </p>
      <% else %>
        <p class="card-text text-muted">レビュー内容がありません</p>
      <% end %>
      
      <!-- 評価表示 -->
      <div class="mb-2">
        <small class="text-muted">
          歌詞: <%= review.lyrics_review %>/5 | 
          メロディー: <%= review.melody_review %>/5
        </small>
      </div>
      
      <!-- 投稿者と日時 -->
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted">
          by <%= review.user.email %>
        </small>
        <small class="text-muted">
          <%= review.created_at.strftime('%Y/%m/%d') %>
        </small>
      </div>
    </div>
    
    <!-- レビュー詳細へのリンク -->
    <div class="card-footer">
      <%= link_to "詳細を見る", review_path(review), 
          class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>
</div>
