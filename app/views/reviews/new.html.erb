<div class="row w-100">
  <div class="col-12">
    <div class="card shadow-lg border-0" style="min-height: 80vh;">
      
      <!-- エラーメッセージ（Bootstrap版） -->
      <% if @review.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容を確認してください（<%= @review.errors.count %>件）</strong>
          <ul class="mb-0 mt-2">
            <% @review.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- フォーム（Bootstrap統一） -->
      <div class="card-body">
        <%= form_with(model: @review, url: reviews_path, local: true) do |f| %>
          
          <!-- タイトル（縦並び） -->
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <span class="text-danger">*</span>
            <%= f.text_field :title, class: "form-control", placeholder: "例：最高のロックアルバム！" %>
          </div>

          <!-- アーティスト（縦並び） -->
          <div class="mb-3">
            <%= f.label :artist, class: "form-label" %>
            <span class="text-danger">*</span>
            <%= f.text_field :artist, class: "form-control", placeholder: "例：Queen" %>
          </div>
          
          <!-- ジャンル（縦並び） -->
          <div class="mb-3">
            <%= f.label :genre, "ジャンル", class: "form-label" %>
            <%= f.text_field :genre, class: "form-control", placeholder: "例：Rock" %>
          </div>

          <!-- レビュー内容（縦並び） -->
          <div class="mb-3">
            <%= f.label :body, "レビュー内容", class: "form-label" %>
            <span class="text-danger">*</span>
            <%= f.text_area :body, rows: 6, class: "form-control", placeholder: "この音楽の魅力を詳しく教えてください..." %>
            <div class="form-text">あなたの感想や、おすすめポイントを自由に書いてください</div>
          </div>

          <!-- ボタン部分（既存のまま） -->
          <div class="d-flex justify-content-center gap-3 mt-4">
            <%= f.submit "投稿する", class: "btn btn-primary btn-lg px-5", style: "border-radius: 0; background: linear-gradient(45deg, #007bff, #0056b3); border: none;" %>
            <%= link_to "キャンセル", reviews_path, class: "btn btn-outline-secondary btn-lg px-5", style: "border-radius: 0;" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
