<div class="row w-100">
  <div class="col-12 col-md-6 mx-auto">  <!-- 中央寄せ + 幅制限 -->
    <div class="card shadow-lg border-0" style="min-height: 60vh;">
      <div class="card-body">
        
        <!-- ページタイトル -->
        <h2 class="text-center mb-4"><%= t('devise.sessions.new.sign_in') %></h2>
        
        <!-- エラーメッセージ（必要に応じて） -->
        <% if notice %>
          <div class="alert alert-info" role="alert">
            <%= notice %>
          </div>
        <% end %>
        
        <% if alert %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
        <% end %>

        <!-- フォーム -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <!-- メールアドレス -->
          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <span class="text-danger">*</span>
            <%= f.email_field :email, 
                class: "form-control", 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "example@email.com" %>
          </div>

          <!-- パスワード -->
          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <span class="text-danger">*</span>
            <%= f.password_field :password, 
                class: "form-control", 
                autocomplete: "current-password" %>
          </div>

          <!-- ログイン状態を保持 -->
          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
            </div>
          <% end %>

          <!-- ボタン（レビューフォームと同じスタイル） -->
          <div class="d-flex justify-content-center gap-3 mt-4">
            <%= f.submit t('devise.sessions.new.sign_in'), 
                class: "btn btn-primary btn-lg px-5",
                style: "border-radius: 0; background: linear-gradient(45deg, #007bff, #0056b3); border: none;" %>
          </div>
        <% end %>

        <!-- リンク -->
        <div class="text-center mt-3">
          <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>